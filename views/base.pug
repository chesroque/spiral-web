doctype html

html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Spiral
    link(href='https://fonts.googleapis.com/css2?family=Roboto&display=swap' rel='stylesheet')
    link(rel='stylesheet', href='/stylesheets/home.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(src='https://kit.fontawesome.com/a076d05399.js')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')

  body
    block nav
      nav.navbar.navbar-expand-md.navbar-custom.d-flex.justify-content-between.p-2
        div
          a.d-flex(style='text-decoration: none; color: black;', href='/')
            img(src='/images/spiral.png', width='40px', style='object-fit: contain' )
            h1
              strong SPIRAL! 
        ul.navbar-nav.ml-auto
          .items
            li
              a(href='/')  Home 
            if isLogged
              li
                a(href='/profile')  Profile 
              li
                a(href='/user/logout')  Logout 
              li
                a(href='/checkout')
                  i.fa.fa-shopping-cart(aria-hidden='true')
            else
              li
                a(href='/user/login')  Login 
          form.form-inline.ml-auto(action="")
            li.search-icon
              input(type='search', placeholder='Search', name="search")
              button.icon(type="submit")
                span.fa.fa-search  

    block content